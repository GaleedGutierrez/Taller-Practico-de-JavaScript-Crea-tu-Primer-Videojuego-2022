extend ./components/global/_global.pug
block head
	- const SEE_HEADER = false
	- const SEE_FOOTER = false
	+style-head("style.css")
	//- +style-head-responsive("homepage/tablet.css", "800")
	//- +style-head-responsive("homepage/desktop.css", "1024")
	+titles("Platziv - Juego Online")
block main
	main.main
		div#main__start-display-id.main__start-display
			h1.start-display__title.start-display__text Laberinto
			p.start-display__subtitle.start-display__text Guía al programador a no encontrarse con bugs.
			button#main__button-start-id.start-display__button-start Start
		div#main__counter-container-id.main__counter-container.hidden
			p#main__counter.main__counter 3

		section.main__canvas-and-info-game-container
			canvas#main__game-container-id.main__game-container

			section#main__info-game-id.main__info-game
				p.info-game__data.info-game__life Vidas:&nbsp;
					span#info-game__lives-id
				p.info-game__data.info-game__time Tiempo: 🕒&nbsp;
					span#info-game__time-id.info-game__time-info
				p.info-game__data.info-game__record Record: 🏁&nbsp;
					span#info-record-id 00:00:00

		section.main__buttons-container
			button#main__button-left-id.button.main__button-left ⇐
			button#main__button-up-id.button.main__button-up ⇑
			button#main__button-right-id.button.main__button-right ⇒
			button#main__button-down-id.button.main__button-down ⇓

block scripts
	script(async src="https://www.googletagmanager.com/gtag/js?id=G-M8H4YB694S")
	script(src="../dist/googleAnalytics.js")
	script(type="module" src="../dist/game.js")
