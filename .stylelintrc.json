{
	"extends": ["stylelint-config-standard-scss"],
	"plugins": ["stylelint-order"],
	"rules": {
		"indentation": "tab",
		"declaration-no-important": true,
		"selector-id-pattern": "^[a-z]([-]?[a-z0-9]+)*(__[a-z0-9]([-]?[a-z0-9]+)*)?(--[a-z0-9]([-]?[a-z0-9]+)*)?$",
		"selector-class-pattern": "^[a-z]([-]?[a-z0-9]+)*(__[a-z0-9]([-]?[a-z0-9]+)*)?(--[a-z0-9]([-]?[a-z0-9]+)*)?$",
		"declaration-colon-space-after": "always-single-line",
		"function-comma-space-after": "always",
		"order/order": ["custom-properties", "declarations"],
		"order/properties-order": [
			"position",
			"left",
			"top",
			"right",
			"bottom",
			"z-index",

			"display",
			"gap",
			"grid-template",
			"grid-area",
			"grid-column",
			"grid-row",
			"grid-template-areas",
			"grid-template-columns",
			"grid-template-rows",
			"grid-auto-columns",
			"grid-auto-rows",
			"grid-auto-flow",
			"grid-column-start",
			"grid-column-end",
			"grid-row-start",
			"grid-row-end",

			"flex",
			"flex-direction",
			"flex-wrap",
			"flex-grow",
			"flex-shrink",
			"flex-basis",
			"flex-flow",

			"place-content",
			"justify-content",
			"align-content",
			"justify-items",
			"align-items",
			"justify-self",
			"align-self",

			"width",
			"max-width",
			"min-width",

			"height",
			"max-height",
			"min-height",

			"padding",
			"padding-block",
			"padding-block-start",
			"padding-block-end",
			"padding-inline",
			"padding-inline-start",
			"padding-inline-end",
			"padding-left",
			"padding-top",
			"padding-bottom",
			"padding-right",

			"border",
			"border-radius",
			"border-left",
			"border-top",
			"border-right",
			"border-bottom",
			"border-color",
			"border-width",
			"border-style",
			"border-collapse",
			"border-spacing",
			"border-block",
			"border-image",
			"border-bottom-left-radius",
			"border-bottom-right-radius",
			"border-bottom-color",
			"border-bottom-width",
			"border-bottom-style",
			"border-top-left-radius",
			"border-top-right-radius",
			"border-top-color",
			"border-top-width",
			"border-top-style",
			"border-right-color",
			"border-right-width",
			"border-right-style",
			"border-left-color",
			"border-left-width",
			"border-left-style",
			"border-block-start",
			"border-block-end",
			"border-block-color",
			"border-block-style",
			"border-block-width",
			"border-block-end-color",
			"border-block-end-width",
			"border-block-end-style",
			"border-block-start-color",
			"border-block-start-style",
			"border-block-start-width",
			"border-end-start-radius",
			"border-end-end-radius",
			"border-image-outset",
			"border-image-repeat",
			"border-image-slice",
			"border-image-source",
			"border-image-width",
			"border-inline",
			"border-inline-start",
			"border-inline-end",
			"border-inline-color",
			"border-inline-style",
			"border-inline-width",
			"border-inline-start-color",
			"border-inline-start-style",
			"border-inline-start-width",
			"border-inline-end-color",
			"border-inline-end-style",
			"border-inline-end-width",

			"margin",
			"margin-left",
			"margin-top",
			"margin-right",
			"margin-bottom",
			"margin-block",
			"margin-block-start",
			"margin-block-end",
			"margin-inline",
			"margin-inline-start",
			"margin-inline-end",
			"margin-trim",

			"background",
			"background-image",
			"background-color",
			"background-position",
			"background-repeat",
			"background-size",
			"background-clip",
			"background-attachment",
			"background-position-x",
			"background-position-y",
			"background-origin",
			"background-blend-mode",

			"font-family",
			"font-size",
			"font-weight",
			"font-style",
			"font-display",
			"font-variant",
			"font-feature-settings",
			"font-stretch",
			"font-variant-ligatures",
			"font-variant-numeric",
			"font-kerning",
			"font-language-override",
			"font-optical-sizing",
			"font-size-adjust",
			"font-synthesis",
			"font-variant-alternates",
			"font-variant-caps",
			"font-variant-east-asian",
			"font-variant-position",
			"font-variation-settings",

			"color",
			"shadow-box"
		],
		"unit-allowed-list": ["rem", "%" , "ms", "deg", "vh", "vw", "fr"]
	}
}
